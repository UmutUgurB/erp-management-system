{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "Backend API for ERP System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "seed": "node scripts/init-mongo.js",
    "backup": "node utils/backup.js",
    "health": "curl http://localhost:5000/health || echo 'Server not running'",
    "docker:build": "docker build -t erp-backend .",
    "docker:run": "docker run -p 5000:5000 erp-backend"
  },
  "keywords": [
    "erp",
    "backend",
    "express",
    "mongodb",
    "api",
    "rest"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "rate-limiter-flexible": "^7.1.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "mongodb-memory-server": "^8.16.1"
